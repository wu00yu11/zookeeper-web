<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.example.zookeeperweb.dao.ZkCfgDao">
    <resultMap id="zkCfgMap" type="ZkCfg">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="host" property="host"/>
        <result column="desc" property="desc"/>
    </resultMap>

    <insert id="add" parameterType="com.learn.example.zookeeperweb.model.ZkCfg">
        insert into zk_cfg (name ,host,desc) values (#{name},#{host},#{desc})
    </insert>

    <update id="update" parameterType="com.learn.example.zookeeperweb.model.ZkCfg">
      update zk_cfg
      <set>
          name=#{name},
          host=#{host},
          desc=#{desc}
      </set>
        where id= #{id}
    </update>

    <delete id="delete" parameterType="com.learn.example.zookeeperweb.model.ZkCfg">
      delete * from zk_cfg where id = ${id}
    </delete>

    <select id="query" parameterType="com.learn.example.zookeeperweb.model.ZkCfg" resultMap="zkCfgMap">
        select * from zk_cfg
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="name != null"> and name = #{name}</if>
            <if test="host != null"> and host = #{host}</if>
            <if test="desc != null"> and desc = #{desc}</if>
        </where>
    </select>

</mapper>